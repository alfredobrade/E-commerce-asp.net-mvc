

@model IEnumerable<E_commerce_rocosa.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categorias</h1>
<div class="conainer p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista Categorias</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categoria" asp-action="NewCategoria" class="btn btn-primary"> Nueva Categoria</a>
        </div>

    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre Categoria</th>
                    <th>Orden</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="50%">@item.NombreCategoria</th>
                        <th width="30%">@item.MostrarOrden</th>
                        <th></th>
                    </tr>
                } 
            </tbody>

        </table>
    }
    else
    {
        <p>No hay elementos</p>
    }

</div>

