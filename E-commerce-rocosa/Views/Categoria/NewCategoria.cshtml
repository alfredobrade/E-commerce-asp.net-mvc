
@model E_commerce_rocosa.Models.Categoria


@{
    ViewData["Title"] = "NewCategoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="NewCategoria">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Nueva Categoria</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label">Nombre Categoria</label>
                    <input asp-for="NombreCategoria" class="form-control"/>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="MostrarOrden" class="form-label">Orden</label>
                    <input asp-for="MostrarOrden" class="form-control" />
                </div>
            </div>
            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-controller="Categoria" asp-action="Index" class="btn btn-success">Regresar</a>

            </div>
        </div>



    </div>

</form>

