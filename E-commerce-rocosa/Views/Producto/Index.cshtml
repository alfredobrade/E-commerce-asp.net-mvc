

@model IEnumerable<E_commerce_rocosa.Models.Producto>
    

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Productos</h1>
<div class="conainer p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Lista Productos</h2>

		</div>
		<div class="col-6 text-end">
			<a asp-controller="Producto" asp-action="NewProduct" class="btn btn-primary"> Nuevo Producto</a>
		</div>

	</div>
	<br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>Nombre Producto</th>
					<th>Descripcion Producto</th>
					<th>Precio</th>
					<th>Categoria</th>
					<th>Tipo Aplicacion</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<th width="50%">@item.ProductName</th>
						<th width="50%">@item.Description</th>
						<th width="50%">@item.Price</th>
						<th width="50%">@item.Categoria.NombreCategoria</th>
						<th width="50%">@item.TipoAplicacion.Nombre</th>

						<th class="text-center">
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Producto" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
									Edit
								</a>
								<a asp-controller="Producto" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
									Delete
								</a>
							</div>


						</th>
					</tr>
				}
			</tbody>

		</table>
	}
	else
	{
		<p>No hay elementos</p>
	}

</div>