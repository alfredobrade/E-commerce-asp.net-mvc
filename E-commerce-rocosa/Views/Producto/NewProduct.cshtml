@model E_commerce_rocosa.Models.Producto


@{
    ViewData["Title"] = "NewProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="NewProduct" enctype="multipart/form-data">
    
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-info pl-3">New Product</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="ProductName" class="form-label">Nombre Producto</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Description" class="form-label">Descripcion</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Price" class="form-label">Precio</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="CategoriaId" class="form-label">Categoria</label>
                    <select asp-for="CategoriaId" asp-items="@ViewBag.categoriaDropDown" class="form-select">
                        <option disabled selected>--seleccione categoria--</option>
                    </select>

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="TipoAplicacionId" class="form-label">Tipo Ap</label>
                    <select asp-for="TipoAplicacionId" asp-items="@ViewBag.tipoApDropDown" class="form-select">
                        <option disabled selected>--seleccione Tipo ap--</option>
                    </select>

                </div>
            </div>
            

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="ImgUrl" class="form-label">Imagen</label>
                    <input type="file" name="files" id="imagenId" class="form-control" />
                </div>
            </div>

            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-controller="Producto" asp-action="Index" class="btn btn-success">Regresar</a>

            </div>
        </div>



    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
