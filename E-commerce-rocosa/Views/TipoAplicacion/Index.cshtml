
@model  IEnumerable<E_commerce_rocosa.Models.TipoAplicacion>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tipo Aplicacion</h1>
<div class="conainer p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Lista Tipo Aplicacion</h2>

		</div>
		<div class="col-6 text-end">
			<a asp-controller="TipoAplicacion" asp-action="NewTipoAplicacion" class="btn btn-primary"> Nueva TipoAplicacion</a>
		</div>

	</div>
	<br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>Nombre Tipo Aplicacion</th>
				   
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<th width="50%">@item.Nombre</th>

						<th class="text-center">
							<div class="w-75 btn-group" role="group">
								<a asp-controller="TipoAplicacion" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
									Editar
								</a>
								<a asp-controller="TipoAplicacion" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
									Eliminar
								</a>
							</div>


						</th>
					</tr>
				}
			</tbody>

		</table>
	}
	else
	{
		<p>No hay elementos</p>
	}

</div>

